<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">

        <KeyFrameSet>

            <KeyAttribute
                motion:framePosition="0"
                motion:target="@+id/background">

                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#3F51B5" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="0"
                android:scaleX="1"
                android:scaleY="1"
                android:rotation="0"
                motion:target="@+id/image">

                <CustomAttribute
                    motion:attributeName="color"
                    motion:customColorValue="#BFC5E6" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="33"
                motion:target="@+id/background">

                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#FFEB3B" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="33"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:rotation="120"
                motion:target="@+id/image">

                <CustomAttribute
                    motion:attributeName="color"
                    motion:customColorValue="#544D13" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="66"
                motion:target="@+id/background">

                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#E91E63" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="66"
                android:scaleX="1.6"
                android:scaleY="1.6"
                android:rotation="240"
                motion:target="@+id/image">

                <CustomAttribute
                    motion:attributeName="color"
                    motion:customColorValue="#F7B4CB" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                motion:target="@+id/background">

                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#03A9F4" />

            </KeyAttribute>

            <KeyAttribute
                motion:framePosition="100"
                android:scaleX="1"
                android:scaleY="1"
                android:rotation="360"
                motion:target="@+id/image">

                <CustomAttribute
                    motion:attributeName="color"
                    motion:customColorValue="#003750" />

            </KeyAttribute>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet
        android:id="@+id/start">

        <Constraint
            android:id="@+id/background"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/image"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:padding="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">

        <Constraint
            android:id="@+id/background"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/image"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:padding="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

</MotionScene>